 <script>
    import { claseState, themeState } from '../stores/class';
    import { theme, boton, texto, fontsize, fontweight, textcolor, textalign } from '../element/tipografiaEle';
    import type { Fontsize, Fontweight, Textcolor, Textalign } from '../interfaces/tipografia';

    let clase: string
    let control: any[] = []

    if(themeState.value === ''){ themeState.set('dark') }
    setTheme(themeState.value)

    theme.addEventListener('change', () => {
        setTheme(theme.value)
        themeState.set(theme.value)
    });

    function setTheme(theme: string) {
        if (theme === 'light') {
            boton.classList.add('bg-gray-100', 'text-black');
            boton.classList.remove('bg-gray-900', 'text-white');
        } else {
            boton.classList.add('bg-gray-900', 'text-white');
            boton.classList.remove('bg-gray-100', 'text-black');
        }
    }

    function addclass(sel : string) {
        texto.classList.add(sel);
        clase = texto.classList.value
        claseState.set(clase)
    }

    textalign.addEventListener('change', () => {
        const select: string = textalign.value
        const value: Textalign = { 'textalign': select }
        control.map((font) => {
            if(font.textalign) texto.classList.remove(font.textalign)
        })
        addclass(select)
        control.push(value)
    });

    textcolor.addEventListener('change', () => {
        const select: string = textcolor.value
        const value: Textcolor = { 'textcolor': select }
        control.map((font) => {
            if(font.textcolor) texto.classList.remove(font.textcolor)
        })
        addclass(select)
        control.push(value)
    });

    fontweight.addEventListener('change', () => {
        const select: string = fontweight.value
        const value: Fontweight = { 'fontweight': select }
        control.map((font) => {
            if(font.fontweight) texto.classList.remove(font.fontweight)
        })
        addclass(select)
        control.push(value)
    });

    fontsize.addEventListener('change', () => {
        const select: string = fontsize.value
        const value: Fontsize = { 'fontsize': select }
        control.map((font) => {
            if(font.fontsize) texto.classList.remove(font.fontsize)
        })
        addclass(select)
        control.push(value)
    });

 </script>